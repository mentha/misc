[Unit]
Description=Alias ACPI backlight on Pixelbook
Before=multi-user.target
ConditionPathExists=/sys/class/backlight/acpi_video0
Requires=pixelbook-backlight-intel.service
After=pixelbook-backlight-intel.service

[Service]
Type=simple
ExecStartPre=/bin/sleep 1
ExecStart=/usr/local/sbin/aliasbacklightfs /sys/class/backlight/acpi_video0 /sys/class/backlight/intel_backlight

[Install]
WantedBy=multi-user.target
